<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title-input">Title</label>
      <input type="text" id="post-title-input" name="post-title-input" />
    </div>
    <div>
      <label for="post-content-input">Your Writing Here</label>
      <textarea id="post-content-input" name="post-content-input"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>
